<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/item_height"
    android:gravity="center_vertical"
    android:minHeight="@dimen/item_height"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/item_icon_edge"
        android:layout_height="@dimen/item_icon_edge"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:contentDescription="@string/item_icon"
        android:layout_marginRight="@dimen/item_icon_right_margin" />

    <TextView
        android:id="@+id/primary_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
		android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@id/icon"/>

    <TextView
        android:id="@+id/tertiary_info"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_alignBottom="@+id/secondary_info"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/secondary_info"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_below="@+id/primary_info"
        android:layout_alignLeft="@+id/primary_info"
        android:layout_toLeftOf="@id/tertiary_info"/>

</RelativeLayout>