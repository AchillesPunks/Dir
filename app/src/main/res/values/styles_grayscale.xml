<resources>
    <style name="Widget.Dir.Grayscale.ActionBar" parent="@style/Widget.Dir.ActionBar">
        <item name="android:background">@drawable/ab_solid_dark</item>
        <item name="android:backgroundStacked">@color/dark_light</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dark</item>
    </style>

    <!-- This style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dir.Grayscale.Widget" parent="@style/Theme.Dir.Widget">
        <item name="android:popupMenuStyle">@style/PopupMenu.Dir.Dark</item>
    </style>

    <style name="Theme.Dir.Grayscale.Dialog.Alert" parent="@style/Theme.Dir.Dialog.Alert">
        <item name="android:listChoiceIndicatorSingle">@drawable/grayscale_btn_radio_holo_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/grayscale_btn_check_holo_light</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/grayscale_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/grayscale_activated_background_holo_light</item>
    </style>
</resources>