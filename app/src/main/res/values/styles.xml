<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base text appearance values -->
    <style name="TextAppearance.Dir.Large" parent="android:TextAppearance.Holo.Large">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-thin</item>
    </style>
    <style name="TextAppearance.Dir.Medium" parent="android:TextAppearance.Holo.Medium">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Dir.Small" parent="android:TextAppearance.Holo.Small">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>
    <style name="TextAppearance.Dir.LargePopupMenu" parent="TextAppearance.Dir.Medium">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Dir.Large.DialogTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>
    <style name="DialogWindowTitle" >
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Dir.Large.DialogTitle</item>
    </style>

    <!-- Misc -->
    <style name="ActionButton.CloseMode.Dir" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dir</item>
    </style>
    <style name="DropDownListView.Dir" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dir</item>
    </style>

    <!-- Helper styles -->
    <style name="dialogDetailsPrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="dialogDetailsSecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>